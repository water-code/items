/* pages/home/home.wxss */
.van-search {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1;
}
.swiper {
  margin-top: 109rpx;
  width: 100%;
  height: 340rpx;
}
.swiper-item image{
  width: 100%;
}
.van-icon__image {
  margin-top: 30rpx;
}
.top image {
  margin: 10rpx 0;
  height: 100rpx;
}
.bottom {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(3,1fr);
}
.bottom image:first-child {
  grid-row: 1/3;
}
.bottom image {
  margin: 4rpx;
}
.floor{
  padding-bottom: 100rpx;
}